<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="edu.hsl.hollekeiti.activity.AboutActivity">
<edu.hsl.hollekeiti.phone.view.ActionBarView
    android:id="@+id/action_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"/>
    <ImageView
        android:id="@+id/iv_app_icon"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/androidy"/>
    <TextView
        android:id="@+id/tv_app_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_app_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/app_name"
        android:textSize="@dimen/tel_show_text_size"/>
    <TextView
        android:id="@+id/tv_banbenhao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_app_lable"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="V1.0.0.021"/>

</RelativeLayout>
